{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      // "@sdk": ["dist/video-call-sdk/index.es.js"]
      "@sdk": ["src/sdk/index.ts"]
    },
    "outDir": "./dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/__tests__"]
}
