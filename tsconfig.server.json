{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist/server"
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/server/**/*", "src/utils/**/*"],
  "exclude": ["**/__tests__"]
}
